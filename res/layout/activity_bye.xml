<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/black"
        android:scaleType="fitXY"
        android:src="@drawable/bye" 
        android:id="@+id/ThankYouByeImage"/>

    
    <TextView
        android:id="@+id/ByeEmail"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:textColor="@drawable/theme_purple"
        android:textSize="33sp"
        android:textStyle="bold" >

        <requestFocus />
    </TextView>

    <Button
        android:id="@+id/feedback"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Feedback(Debug)" />

    <TextView
        android:id="@+id/feedbackTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ByeEmail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/feedback"
        android:ems="10"
		/>     
</RelativeLayout>